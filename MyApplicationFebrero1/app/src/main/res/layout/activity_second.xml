<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SecondActivity">

    <android.support.v7.widget.RecyclerView
            android:layout_width="394dp"
            android:layout_height="434dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:id="@+id/recyclerView"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnS"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="132dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="104dp" android:text="Third Activity"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/etM"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="99dp"
            android:layout_marginBottom="35dp" app:layout_constraintBottom_toTopOf="@+id/btnS"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvS" android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toTopOf="@+id/etM" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="176dp"/>
</android.support.constraint.ConstraintLayout>