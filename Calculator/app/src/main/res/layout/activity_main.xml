<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="@string/division"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:id="@+id/btnDiv" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:text="@string/sustract"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/btnSus" android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="380dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:text="@string/multiply"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:id="@+id/btnMul"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"/>
    <Button
        android:text="@string/add"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/btnAdd" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
        android:layout_marginTop="380dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/axtData2" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="96dp" android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/etxData1" android:hint="@string/data2hint"
        android:autofillHints=""/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        tools:layout_editor_absoluteY="249dp" android:id="@+id/etxData1" android:layout_marginEnd="96dp"
        app:layout_constraintEnd_toEndOf="parent" android:hint="@string/data1hint"/>
    <TextView
        android:text="@string/result"
        android:layout_width="69dp"
        android:layout_height="72dp"
        android:id="@+id/textView6"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="150dp" android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/etxData1"/>
</android.support.constraint.ConstraintLayout>