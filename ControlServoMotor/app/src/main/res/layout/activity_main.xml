<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="@string/connectBtn"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:id="@+id/btnConnect" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSend" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/btnDisconnect"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etAngle"
            android:hint="@string/AngleHint" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="128dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp" android:singleLine="true"
            android:selectAllOnFocus="true"/>
    <Button
            android:text="@string/sendBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/btnSend" android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/etAngle" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="128dp"/>
    <Button
            android:text="@string/disconnectBtn"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:id="@+id/btnDisconnect" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/etAngle" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="@string/statusTv"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvStatus" android:layout_marginTop="20dp"
            android:textColor="@color/RED"
            app:layout_constraintTop_toBottomOf="@+id/btnDisconnect" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
</android.support.constraint.ConstraintLayout>