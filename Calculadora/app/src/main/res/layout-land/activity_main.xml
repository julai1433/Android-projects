<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="@string/division"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:id="@+id/btnDiv"
            android:layout_marginTop="128dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnMul" android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/sustract"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:id="@+id/btnSus"
            android:layout_marginTop="128dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/btnAdd"/>
    <Button
            android:text="@string/multiply"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:id="@+id/btnMul"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/btnSus"
            android:layout_marginTop="128dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/add"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:id="@+id/btnAdd" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="128dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etxData2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="96dp" android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/etxData1" android:hint="@string/data2hint"
            android:autofillHints=""/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etxData1" android:layout_marginEnd="96dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="@string/data1hint"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <TextView
            android:text="@string/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtResult"
            android:textSize="30sp"
            android:textColor="#ff0000"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>